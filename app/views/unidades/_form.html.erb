<%= form_with(model: unidade) do |form| %>
  <% if unidade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unidade.errors.count, "error") %> impediram essa unidade de ser criada:</h2>

      <ul>
        <% unidade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block", class: "field-text" %>
    <%= form.text_field :nome, class: "input-centralizado" %>
  </div>

  <div class="actions">
    <%= form.submit "Cadastrar Unidade", class: "button" %>
  </div>
<% end %>

