<%= form_with(model: equipe, local: true) do |form| %>
  <% if equipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(equipe.errors.count, "error") %> proibiu esta equipe de ser salva:</h2>

      <ul>
        <% equipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome, style: "display: block", class: "field-text" %>
    <%= form.text_field :nome, class: "input-centralizado" %>
  </div>

  <div class="field">
    <%= form.label :unidade_id, "Unidade", style: "display: block", class: "field-text" %>
    <%= form.collection_select :unidade_id, @unidades, :id, :nome, { prompt: "Selecione uma unidade" }, { class: "input-centralizado" } %>
  </div>

  <div class="actions">
    <%= form.submit "Cadastrar equipe", class: "button" %>
  </div>
<% end %>
